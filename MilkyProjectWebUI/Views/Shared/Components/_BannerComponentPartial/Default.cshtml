@model List<MilkyProject.DtoLayer.BannerDtos.ResultBannerDto>

 <!-- Banner Start -->
<div class="container-fluid banner my-5 py-5" data-parallax="scroll" data-image-src="/dairy-website-template/img/banner.jpg">
    <div class="container py-5">
        <div class="row g-5">
            @foreach(var item in Model)
            {
                <div class="col-lg-6 wow fadeIn" data-wow-delay="0.3s">
                    <div class="row g-4 align-items-center">
                        <div class="col-sm-4">
                            <img class="img-fluid rounded" src="@item.ImageUrl" alt="">
                        </div>
                        <div class="col-sm-8">
                            <h2 class="text-white mb-3">@item.Title</h2>
                            <p class="text-white mb-4">@item.Content</p>
                            <a class="btn btn-secondary rounded-pill py-2 px-4" href="">Daha Fazla Oku</a>
                        </div>
                    </div>
                </div>
            }
            
            
        </div>
    </div>
</div>
<!-- Banner End -->