@model List<ResultLocationDto>  

<!-- Footer Start -->
<div class="container-fluid bg-dark footer mt-5 py-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container py-5">
        <div class="row g-5">
            <div class="col-lg-3 col-md-6">
                <h5 class="text-white mb-4">Adres</h5>
                @foreach(var item in Model)
                {
                    <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>@item.Address</p>
                    <p class="mb-2"><i class="fa fa-phone-alt me-3"></i>@item.Call</p>
                    <p class="mb-2"><i class="fa fa-envelope me-3"></i>@item.Email</p>
                }
                @await Component.InvokeAsync("_SocialMediaComponentPartial")

                
            </div>
            <div class="col-lg-3 col-md-6">
                <h5 class="text-white mb-4">Hızlı Erişim</h5>
                <a class="btn btn-link" href="">Hakkımızda</a>
                <a class="btn btn-link" href="">İletişim</a>
                <a class="btn btn-link" href="">Hizmetler</a>
                <a class="btn btn-link" href="">Şartlar & Koşullar</a>
                <a class="btn btn-link" href="">Destek</a>
            </div>

            @await Component.InvokeAsync("_OpenHoursComponentPartial")
            

            <div class="col-lg-3 col-md-6">
                <h5 class="text-white mb-4">Mail</h5>
                <p>İletişime geçmek için bizimle mail adresinizi paylaşın.</p>
                <div class="position-relative w-100">
                    <input class="form-control bg-transparent w-100 py-3 ps-4 pe-5" type="text" placeholder="Mail Adresiniz..">
                    <button type="button" class="btn btn-secondary py-2 position-absolute top-0 end-0 mt-2 me-2">Gönder</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Footer End -->
