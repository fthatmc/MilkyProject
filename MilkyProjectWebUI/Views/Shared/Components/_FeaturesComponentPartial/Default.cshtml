@model List<ResultWhyUsDto>

 <!-- Features Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-5 align-items-center">
            @foreach(var item in Model)
            {
                <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
                    <p class="section-title bg-white text-start text-primary pe-3">@item.Title</p>
                    <h1 class="mb-4">@item.Content</h1>
                    <p class="mb-4">@item.Description</p>
                    <p><i class="fa fa-check text-primary me-3"></i>@item.Material1</p>
                    <p><i class="fa fa-check text-primary me-3"></i>@item.Material2</p>
                    <p><i class="fa fa-check text-primary me-3"></i>@item.Material3</p>
                    <a class="btn btn-secondary rounded-pill py-3 px-5 mt-3" href="">Explore More</a>
                </div>
            }
            
            @await Component.InvokeAsync("_WhyUsStatisticComponentPartial")
            
        </div>
    </div>
</div>
<!-- Features End -->