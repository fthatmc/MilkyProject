@model List<ResultServiceDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Hizmet Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Hizmet ile ilgili işlemleri buradan gerçekleştirebilirsiniz.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Başlık</th>
                                        <th>Açıklama</th>
                                        <th>Resim URL</th>
                                        <th>İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>

                                            <th scope="row">@count</th>
                                            <td>@item.Title</td>
                                            <td>@item.Description</td>
                                            <td><img class="rounded-circle header-profile-user" alt="" src="@item.ImageUrl" /></td>
                                            <td>
                                                <a href="/Admin/Service/DeleteService/@item.ServiceId/" class="btn btn-outline-danger">Sil</a>
                                                <a href="/Admin/Service/UpdateService/@item.ServiceId/" class="btn btn-outline-info">Güncelle</a>
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <a href="/Admin/Service/CreateService/" class="btn btn-outline-success">Kaydet</a>
                    </div>
                </div>

            </div>

        </div>

    </div>
</div>

