@model UpdateLocationDto

@{
    ViewData["Title"] = "UpdateLocation";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Lokasyon Güncelle</h4>
                        <p class="card-subtitle mb-4">Lokasyon Güncelleme işlemini burdan yapabilirsiniz. Veri girişinden sonra Güncelle butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>
                        <form method="post">
                            <div class="form-group">
                                <input type="hidden" asp-for="LocationId" />
                                <label for="CategoryName">Adres</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Address">
                            </div>
                            <div class="form-group">
                                <label for="CategoryName">Telefon</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Call">
                            </div>
                            <div class="form-group">
                                <label for="CategoryName">Email</label>
                                <input type="email" class="form-control" id="exampleInputName" asp-for="Email">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

