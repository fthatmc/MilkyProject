@model List<SocialMediaDtos>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Sosyal Medya  Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Sosyal Medya ile ilgili işlemleri buradan gerçekleştirebilirsiniz.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Adı</th>
                                        <th>Icon</th>
                                        <th>URL</th>
                                        <th>İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>

                                            <th scope="row">@count</th>
                                            <td>@item.Name</td>
                                            <td>@item.Icon</td>
                                            <td>@item.Url</td>
                                            <td>
                                                <a href="/Admin/SocialMedia/DeleteSocialMedia/@item.SocialMediaId/" class="btn btn-outline-danger">Sil</a>
                                                <a href="/Admin/SocialMedia/UpdateSocialMedia/@item.SocialMediaId/" class="btn btn-outline-info">Güncelle</a>
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <a href="/Admin/SocialMedia/CreateSocialMedia/" class="btn btn-outline-success">Kaydet</a>
                    </div>
                </div>

            </div>

        </div>

    </div>
</div>

